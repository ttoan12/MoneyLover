<Window x:Class="MoneyLover.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:MoneyLover"
        mc:Ignorable="d"
        Title="Money Lover" Height="457" Width="295" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" MaxWidth="295" MaxHeight="460" WindowStyle="None" MouseDown="Window_MouseDown">
    <Grid Background="#FFDB5C0F">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Image x:Name="picIntro" Source="/images/Intro.png" Stretch="Uniform" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,0,0,50"/>
        <Label x:Name="lblIntro" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" HorizontalContentAlignment="Center" VerticalContentAlignment="Top" Height="45" FontFamily="Arial" FontSize="10" Padding="10 0 10 0" Foreground="White" Margin="0">
            <TextBlock x:Name="lblIntro_Content" TextWrapping="WrapWithOverflow" TextAlignment="Center" FontSize="13.333" Margin="0" Width="275">
                Lên kế hoạch tài chính thông minh và từng bước tiết kiệm để hiện thực hóa ước mơ.
            </TextBlock>
        </Label>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Row="1" Margin="0,0,0,110">
            <Label x:Name="slideIntro1" Content="•" FontFamily="Arial" FontSize="24" Height="Auto" Margin="1 0" Foreground="White" IsEnabled="False"/>
            <Label x:Name="slideIntro2" Content="•" FontFamily="Arial" FontSize="24" Height="Auto" Margin="1 0" Foreground="White" IsEnabled="False"/>
            <Label x:Name="slideIntro3" Content="•" FontFamily="Arial" FontSize="24" Height="Auto" Margin="1 0" Foreground="White" IsEnabled="False"/>
            <Label x:Name="slideIntro4" Content="•" FontFamily="Arial" FontSize="24" Height="Auto" Margin="1 0" Foreground="White" IsEnabled="False"/>
            <Label x:Name="slideIntro5" Content="•" FontFamily="Arial" FontSize="24" Height="Auto" Margin="1 0" Foreground="White"/>
        </StackPanel>

        <Button x:Name="btnReg" Content="LẦN ĐẦU SỬ DỤNG MONEY LOVER" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Bottom" Height="32" Width="255" Padding="0" FontFamily="Arial" FontSize="12" FontWeight="Bold" Background="White" Foreground="Green" BorderBrush="Black" BorderThickness="0" Margin="0,0,0,65" Click="BtnReg_Click"/>
        <Button x:Name="btnLogin" Content="ĐÃ SỬ DỤNG MONEY LOVER" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Bottom" Height="32" Width="255" Padding="0" FontFamily="Arial" FontSize="12" FontWeight="Bold" Background="#FFDB5C0F" BorderBrush="White" BorderThickness="1" Margin="20,0,20,15" Click="BtnLogin_Click"/>

    </Grid>
</Window>
